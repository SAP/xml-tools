    "test": "node test/runTest.js",
    "build": "vsce package"
  },
  "dependencies": {
    "@xml-tools/language-server": "1.0.2",
    "vscode-languageclient": "6.1.1"
  },
  "devDependencies": {
    "@types/node": "10.17.15",
    "@types/vscode": "1.42.0",
    "vscode-test": "1.3.0",
    "glob": "^7.1.6"
  }
}
