{
  "name": "xml-for-vscode",
  "description": "XML for VSCode",
  "version": "0.0.1",
  "private:": true,
  "publisher": "SAP SE",
  "repository": {
    "type": "git",
    "url": "https://github.com/SAP/xml-tools"
  },
  "engines": {
    "vscode": "1.42.1"
  },
  "activationEvents": [
    "onLanguage:xml"
  ],
  "main": "lib/extension",
  "scripts": {
