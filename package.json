{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "xml-toolkit/vscode-languageclient",
      "xml-toolkit/vscode-languageclient/**",
      "xml-toolkit/@xml-tools/language-server",
      "xml-toolkit/@xml-tools/language-server/**"
    ]
  },
  "scripts": {
    "lerna:version": "lerna version && yarn run cirlce:release",
    "cirlce:release": "node ./scripts/trigger-release",
    "lerna:publish": "lerna publish from-git --yes",
    "ci": "npm-run-all format:validate ci:subpackages",
    "format:fix": "prettier --write --ignore-path .gitignore \"**/*.@(ts|js|json|md)\"",
    "format:validate": "prettier --check --ignore-path .gitignore \"**/*.@(ts|js|json|md)\"",
    "ci:subpackages": "lerna run ci",
    "test": "lerna run test",
    "coverage": "lerna run coverage"
  },
  "devDependencies": {
    "@types/chai": "4.2.11",
    "@types/mocha": "7.0.2",
    "@types/node": "10.17.15",
    "chai": "4.2.0",
    "husky": "4.2.5",
    "lerna": "3.22.0",
    "lint-staged": "10.2.6",
    "mocha": "7.2.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.1",
    "prettier": "1.19.1",
    "typescript": "3.9.3",
    "cz-conventional-changelog": "3.2.0",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "rimraf": "3.0.2",
    "simple-git": "1.132.0"
  },
  "prettier": {
    "plugins": [],
    "pluginSearchDirs": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,js,md,json}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
